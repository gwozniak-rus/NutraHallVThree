<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context=".MainActivity3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:text="sign in code"
        android:textColor="@color/gold"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:id="@+id/codeGenerate"
        android:text="Entrance Code"
        />

    <TextView
        android:id="@+id/generated"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/codeGenerate"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:autoSizeTextType="uniform" />
    <!--need to add logout code -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/timeView"
        android:layout_below="@+id/generated"
        android:autoSizeTextType="uniform"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startBTN"
        android:text="start"
        android:layout_below="@+id/timeView"
        android:gravity="left"
        />

    <Button
        android:id="@+id/stopBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_marginLeft="75dp"
        android:layout_toRightOf="@+id/startBTN"
        android:text="stop" />

    <Button
        android:id="@+id/resetBTN"
        android:text="reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/stopBTN"
        />

    <Button
        android:id="@+id/sendBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopBTN"
        android:text="SEND/SAVE"
        android:layout_marginTop="5dp" />


</RelativeLayout>